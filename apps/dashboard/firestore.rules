rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Projects collection
    match /projects/{projectId} {
      // Allow read/write for authenticated users who are members
      allow read: if request.auth != null;
      allow write: if request.auth != null;

      // Tasks subcollection
      match /tasks/{taskId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }

      // Agents subcollection
      match /agents/{agentId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }

      // Access requests subcollection
      match /accessRequests/{requestId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }

      // Conflicts subcollection
      match /conflicts/{conflictId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }

      // File locks subcollection
      match /fileLocks/{lockId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }

      // Cost events subcollection
      match /costEvents/{eventId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }

      // Onboarding config
      match /onboarding/{configId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }
    }

    // Organizations collection
    match /organizations/{orgId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
