{
  "name": "@conductor/observer",
  "version": "1.0.0",
  "description": "Autonomous monitoring agent for Conductor E2B sandboxes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@conductor/core": "*",
    "@conductor/e2b-runner": "*",
    "@conductor/state": "*",
    "better-sqlite3": "^11.10.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist"
  ],
  "license": "MIT"
}
